{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "resource:/schema/v1/workflow#",
    "type": "object",
    "required": [
        "version",
        "workflow"
    ],
    "properties": {
        "version": {
            "type": "string",
            "description": "Version number of the schema to validate against (i.e. this document)",
            "enum": [
                "1.0.0"
            ]
        },
        "workflow": {
            "type": "object",
            "description": "The root object that describes the workflow",
            "required":[ "id", "title", "class", "steps", "initialActions" ],
            "additionalProperties": false,
            "properties": {
                "id":{ "type":"string"},
                "title":{ "type":"string"},
                "class":{ "type":"string"},
                "initialActions":{
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "$ref": "initialAction.json"
                    }
                },
                "steps": {
                    "type": "array",
                    "minItems": 2,
                    "items": {
                        "type": "object",
                        "$ref": "step.json"
                    }
                }
            }
        }
    }
}