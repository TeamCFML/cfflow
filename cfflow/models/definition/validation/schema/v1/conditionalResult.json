{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "resource:/schema/v1/conditionalResult#",
    "type": "object",
    "required":[ "id", "title", "type", "condition", "transitions" ],
    "properties":{
        "id"    : { "type":"string"},
        "title" : { "type":"string"},
        "type":{
            "type":"string",
            "enum":[ "step", "join", "split" ]
        },
        "condition":{
            "type":"object",
            "$ref":"condition.json"
        },
        "functions":{
            "type":"object",
            "$ref":"functions.json"
        },
        "transitions":{
            "type":"array",
            "minItems":1,
            "items":{
                "type":"object",
                "$ref":"transition.json"
            }
        }
    }
}